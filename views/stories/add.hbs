<h3>Add Story</h3>
<div class="row">
    <form action="/stories" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    <option value="Public" selcted>Public</option>
                    <option value="Private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>
         <div class="row">
            <div class="input-field">
                <select name="meal" id="meal">
                    {{#select story.status}}
                    <option value="Breakfast" selcted>Breakfast</option>
                    <option value="Lunch">Lunch</option>
                    <option value="Dinner">Dinner</option>
                    {{/select}}
                </select>
                <label for="status">Meal</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Experience:</h5>
                <textarea name="body" id="body"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value ="Save" class="btn green">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>